{
    "navigationFallback": {
        "rewrite": "/index.html"
    },
    "responseOverrides": {
        "401": {
            "redirect": "/.auth/login/github?post_login_redirect_uri=.referrer",
            "statusCode": 302
        }
    },
    "routes": [
        {
            "route": "/login",
            "rewrite": "/.auth/login/github"
        },
        {
            "route": "/logout",
            "redirect": "/.auth/logout"
        },
        {
            "route": "/about",
            "allowedRoles": ["authenticated"]
        }
    ]
}